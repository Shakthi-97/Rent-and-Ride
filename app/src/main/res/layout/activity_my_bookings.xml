<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyBookings">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#545481"
        android:gravity="center">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/My_Trips"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="24sp"
            app:drawableStartCompat="@drawable/arback" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="310dp"
        android:layout_height="102dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="240dp"
        android:text="@string/Trip1"
        android:textColor="#545481"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="310sp"
        android:layout_height="102sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="103dp"
        android:text="@string/Trip2"
        android:textColor="#545481"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/tripbtn1"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="291dp"
        android:background="#545481"
        android:drawableEnd="@drawable/next1"
        android:text="@string/Details"
        android:textSize="20sp"
        android:textColor="#fff" />

    <Button
        android:id="@+id/tripbtn2"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="152dp"
        android:background="#545481"
        android:drawableEnd="@drawable/next1"
        android:text="@string/Details"
        android:textSize="20sp"
        android:textColor="#fff" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="320dp"
        android:layout_height="197dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="357dp"
        app:srcCompat="@drawable/lgo" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="215dp"
        android:layout_marginBottom="264dp"
        android:text="@string/Vehicle1"
        android:drawablePadding="2sp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/car1" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="124dp"
        android:text="@string/Vehicle2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/car1" />


</RelativeLayout>